@model FastTripApp.DAO.Models.Trip


<form asp-action="Create" method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Create new Fast Trip</h2>
        </div>
        <div class="row">
            <div class="col">


                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TimePlain"></label>
                    </div>
                    <div class="col">
                        <input asp-for="TimePlain" class="form-control" />
                        <span asp-validation-for="TimePlain" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Descriprion"></label>
                    </div>
                    <div class="col">
                        <textarea asp-for="Descriprion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descriprion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="AddressStart"></label>
                    </div>
                    <div class="col">
                        <textarea cols="2" id="InputStart" type="text" class="form-control" placeholder="Start trip" asp-for="AddressStart"></textarea>
                        <span asp-validation-for="AddressStart" class="text-danger"></span>
                        <input id="InputStartLatitude" type="text" class="form-control d-none" asp-for="AddressStartLatitude">
                        <input id="InputStartLongitude" type="text" class="form-control d-none" placeholder="Start trip" asp-for="AddressStartLongitude">
                    </div>
                </div>

                <input class="form-control d-none" asp-for="EstimatedTime">

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="AddressEnd"></label>
                    </div>
                    <div class="col">
                        <textarea cols="2" id="InputEnd" type="text" class="form-control" placeholder="End trip" asp-for="AddressEnd"></textarea>
                        <span asp-validation-for="AddressEnd" class="text-danger"></span>
                        <input id="InputEndLatitude" type="text" class="form-control d-none" asp-for="AddressEndLatitude">
                        <input id="InputEndLongitude" type="text" class="form-control d-none " placeholder="Start trip" asp-for="AddressEndLongitude">
                    </div>
                </div>

                <div class="row d-flex justify-content-end">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-5 text-right mx-auto" id="map" > </div>
        </div>
    </div>
</form>

<div id="image_div">
    <img id="googleStaticPicture" />
</div>

<script>

    document.getElementById("InputStart").onclick = function () {
        let start = GenAutocomplete("InputStart")
        let end = GenAutocomplete("InputEnd")
        Promise.all([start, end]).then(lala => calcRoute(lala[0], lala[1]))
    }

</script>
