@model FastTripApp.DAO.Models.Trip

<div class="border p-3">
    <div class="form-group row">
        <h2 class="text-info pl-3">Edit Fast Trip</h2>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="Edit" method="post">

                <input asp-for="Id" class="d-none" />
                @Html.Partial("_FormBody", Model)

                <div class="row d-flex justify-content-end">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-5 text-right mx-auto" id="map"> </div>
    </div>
</div>


