@model FastTripApp.DAO.Models.Trip

<style>
    #map {
        height: 400px;
        width: 400px;
    }
</style>

<form method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit curent Fast Trip</h2>
        </div>
        <div class="row">

            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TimePlain"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TimePlain" class="form-control" />
                        <span asp-validation-for="TimePlain" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Descriprion"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Descriprion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descriprion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AddressStart"></label>
                    </div>
                    <div class="col-8">
                        <input id="InputStart" type="text" class="form-control" placeholder="Start trip" asp-for="AddressStart">
                        <input id="InputStartLatitude" type="text" class="form-control d-none" asp-for="AddressStartLatitude">
                        <input id="InputStartLongitude" type="text" class="form-control d-none" placeholder="Start trip" asp-for="AddressStartLongitude">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AddressEnd"></label>
                    </div>
                    <div class="col-8">
                        <input id="InputEnd" type="text" class="form-control" placeholder="End trip" asp-for="AddressEnd">
                        <input id="InputEndLatitude" type="text" class="form-control d-none" asp-for="AddressEndLatitude">
                        <input id="InputEndLongitude" type="text" class="form-control d-none " placeholder="Start trip" asp-for="AddressEndLongitude">
                    </div>
                </div>
                <input type="text" class="form-control d-none" asp-for="UserId">
                <input type="text" class="form-control d-none" asp-for="EstimatedTime">

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 text-right" id="map">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

<div class="col-6 text-right" id="map"></div>
<script>
    let directionsDisplay;
    let directionsService = new google.maps.DirectionsService();
    let geocoder = new google.maps.Geocoder();

    document.getElementById("InputStart").onclick = function () {
        const start = GenAutocomplete("InputStart")
        const end = GenAutocomplete("InputEnd")
        Promise.all([start, end]).then((lala) => calcRoute(lala[0], lala[1]))

    }
    document.getElementById("InputEnd").onclick = function () {
        GenAutocomplete("InputStart").then(coords => calcRoute(coords));
    }

    google.maps.event.addDomListener(window, 'load', initMap);
</script>
