@model FastTripApp.DAO.Models.Comment;

<form asp-action="Create" method="post">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Create new Fast Trip</h2>
        </div>
        <input class="d-none" asp-for="ReviewId" value="@ViewBag.Id"/>
        <div class="row justify-content-center">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4 row">
                <div class="col">
                    <input type="submit" class="btn btn-success w-100" value="Post Review" />
                </div>
                <div class="col">
                    <a asp-controller="Review" asp-action="Index" asp-route-id="@ViewData["Id"]" class="btn btn-danger w-100"><i class="fas fa-sign-out-alt"></i>Close</a>
                </div>
            </div>
        </div>

    </div>
</form>